{
	"database":{
		"MySQL":{
			"host":"192.168.50.63",
			"port":"3306",
			"user":"JBOCDuser",
			"pass":"JBOCDpass",
			"dbname":"jbocd"
		}
	},
	"server":{
		"port":3389,
		"maxActiveClient":1000, // Server will reject any coming client if there is "maxClient" active connection
		"maxWaitClient":10, // Server only have "maxWaitClient" waiting for accept
		"bindRetryInterval":1 // unit: second
	},
	"cloudDriver":{
		// INSTALL DRIVER
	},
	"socket":{
		// max offload of Standard frame with TCP = 1460 Bytes
		// max offload of Jumbo frame with TCP = 8960 Bytes
		// websocket header:
		//     2 Bytes (for size between 0 and 125 )
		//     4 Bytes (for size between 126 and 65535 )
		//     8 Bytes (for size between 65536 and 2^64-1 )
		// we are now tend to crop the message info multi-chunk in file transfering
		//     to balance server read buffer size and network efficiency
		// command sending is always less than 1KB
		"maxPackageSize": 8960,
		"maxContentSize": 8956
	},
	"file":{
		"temp":{
			// this directory should have no useful data inside this folder
			// this path will ERASE before server start
			// if this path have '/', it will become a folder
			// if this path have not '/', it will become file prefix
			"dirpath" : "/var/JBOCD/tmp/" 
		}
	}
}